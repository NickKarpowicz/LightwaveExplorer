{
    "id": "io.github.NickKarpowicz.LightwaveExplorer",
    "branch": "master",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions":["org.freedesktop.Sdk.Extension.llvm15"],
    "add-extensions":{
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "22.08",
            "add-ld-path": "."
        }
    },
    "command": "LightwaveExplorerLauncher.sh",
    "finish-args": [
        "--share=ipc",
        "--device=all",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/lib/*.la",
        "/lib/*.a",
        "/mkspecs",
        "/share/aclocal",
        "/share/info",
        "/share/man"
    ],
    "modules": [
        {
            "name": "gawk",
            "buildsystem": "autotools",
            "sources":[{
                "type": "archive",
                "path": "gawk-5.2.2.tar.gz"
            }]
        },
        {
            "name": "SPIR-V",
            "buildsystem":"cmake",
            "sources":[{
                "type":"git",
                "url": "https://github.com/KhronosGroup/SPIRV-Headers",
                "commit": "268a061764ee69f09a477a695bf6a11ffe311b8d"
            }]
        },
        {
            "name": "SPIRV-LLVM",
            "buildsystem": "cmake",
            "build-options":{
                "append-path": "/usr/lib/sdk/llvm15/bin",
                "prepend-ld-library-path": "/usr/lib/sdk/llvm15/lib"
                },
            "config-opts":["-DLLVM_EXTERNAL_SPIRV_HEADERS_SOURCE_DIR=/app/usr/local/include"],
            "sources":[{
                "type": "git",
                "url": "https://github.com/KhronosGroup/SPIRV-LLVM-Translator",
                "tag": "v15.0.0",
                "commit":"6b53fe69e60b555e40c77a5c2b8529a55a0db3e2"
            }]
        },
        {
            "name": "ocl-clang",
            "buildsystem": "cmake",
            "build-options":{
                "append-path": "/usr/lib/sdk/llvm15/bin",
                "prepend-ld-library-path": "/usr/lib/sdk/llvm15/lib"
                },
            "sources":[{
                "type": "git",
                "url": "https://github.com/intel/opencl-clang",
                "tag": "v15.0.0",
                "commit": "c78c1f884ffe8b40e1681a90ebde1a919c08ddb1"
            }]
        },
        {
            "name": "intel-gmmlib",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/intel/gmmlib/archive/refs/tags/intel-gmmlib-21.3.1.tar.gz",
                    "sha256": "d26a6512a1b3ca604dabe035ddaf47b4b445bd503eac69a59e4acb2d1f54634b"
                }
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "build-options": {
                "prefix" : "/app",
                "make-args": [
                    "-v"
                ],
                "make-install-args": [
                    "-v"
                ]
            }
        },
        {
            "name": "libva",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/intel/libva/releases/download/2.13.0/libva-2.13.0.tar.bz2",
                    "sha256": "fad383f39f36115814bd0eda1496a4cc01761643bd962635400df2d4470ad460"
                }
            ],
            "no-autogen": true,
            "config-opts": ["--with-drivers-path=/app/extensions/IntelMediaSDK/lib/dri"],
            "build-options": {
                "prefix" : "/app"
            }
        },
        {
            "name": "libva-utils",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/intel/libva-utils/releases/download/2.12.0/libva-utils-2.12.0.tar.bz2",
                    "sha256": "bbe49e68fbdf379acc769e4c1680a76be3e2b48020ca320edafaf7235b62cc44"
                }
            ],
            "no-autogen": true,
            "build-options": {
                "prefix" : "/app",
                "prepend-pkg-config-path": "/app/lib/pkgconfig"
            }
        },
        {
            "name": "oneAPI",
            "buildsystem": "simple",
            "build-options":{
                "append-path": "/usr/lib/sdk/llvm15/bin",
                "prepend-ld-library-path": "/usr/lib/sdk/llvm15/lib"
                },
            "build-commands": ["chmod +x l_BaseKit_p_2023.2.0.49397_offline.sh",
                            "./l_BaseKit_p_2023.2.0.49397_offline.sh -x -f webimage_extracted",
                            "rm l_BaseKit_p_2023.2.0.49397_offline.sh",
                            "webimage_extracted/l_BaseKit_p_2023.2.0.49397_offline/bootstrapper -s --action=install --components=intel.oneapi.lin.dpcpp-cpp-compiler --install-dir=/app/opt/intel/oneapi --eula=accept",
                            "rm -rf /app/opt/intel/oneapi/compiler/latest/linux/lib/oclfpga/host/linux64/bin/perl/lib",
                            "webimage_extracted/l_BaseKit_p_2023.2.0.49397_offline/bootstrapper -s --action=install --components=intel.oneapi.lin.mkl.devel:intel.oneapi.lin.tbb.devel --install-dir=/app/opt/intel/oneapi --eula=accept",
                            "rm -rf /app/opt/intel/oneapi/mkl/latest/lib/ia32",
                            "rm -f /app/opt/intel/oneapi/mkl/latest/lib/intel64/*.so*",
                            "rm -rf /app/opt/intel/oneapi/conda_channel"],
            "sources": [
                {
                    "type": "file",
                    "path": "l_BaseKit_p_2023.2.0.49397_offline.sh"
                }
            ]
        },
        {
            "name": "fmt",
            "config-opts": ["-DCMAKE_POSITION_INDEPENDENT_CODE=TRUE", "-DFMT_TEST=OFF"],
            "buildsystem": "cmake",
            "sources": [ 
                { 
                    "type": "git", 
                    "url": "https://github.com/fmtlib/fmt", 
                    "tag": "10.1.0",
                    "commit": "e57ca2e3685b160617d3d95fcd9e789c4e06ca88" } 
                ]
        },
        {
            "name": "gcem",
            "buildsystem": "cmake",
            "sources": [ 
                { 
                    "type": "git", 
                    "url": "https://github.com/kthohr/gcem", 
                    "tag": "v1.17.0",
                    "commit": "8422f5307b0498d09cf626f38acb03fe9f1efd94" } 
                ]
        },
        {
            "name": "dlib",
            "buildsystem": "simple",
            "build-commands":["cp -R dlib /app/include/"],
            "sources": [ 
                { 
                    "type": "git", 
                    "url": "https://github.com/davisking/dlib", 
                    "tag": "v19.24.2",
                    "commit": "39749fba5163d4e25030358f6aa8d91617bfdca2" } 
                ]
        },
        {
            "name": "LightwaveExplorer",
            "buildsystem": "simple",
            "build-commands": ["touch localscript.sh","echo \". /app/opt/intel/oneapi/setvars.sh\" >> localscript.sh",
            "echo export CMAKE_PREFIX_PATH=/app/opt/intel/oneapi/tbb/latest/env/..:/app/opt/intel/oneapi/compiler/latest/linux/IntelDPCPP:/app/opt/intel/oneapi/mkl/latest/lib/cmake/mkl >> localscript.sh",
            "echo \"cmake -DMAKEONEAPIFLATPAK=TRUE -DCMAKE_CXX_COMPILER=icpx .\" >> localscript.sh",
            "echo \"make\" >> localscript.sh",
            "chmod +x localscript.sh","./localscript.sh",
            "cmake --install . --prefix \"/app\""],
            "build-options": {
                "cxxflags": "-O3 -g -pipe -Wp,-D_FORTIFY_SOURCE=2 -fexceptions -fstack-protector-strong -grecord-gcc-switches",
                "cxxflags-override": true,
                "append-path": "/usr/lib/sdk/llvm15/bin",
                "prepend-ld-library-path": "/usr/lib/sdk/llvm15/lib" },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/NickKarpowicz/LightwaveExplorer",
                    "branch": "master"
                }
            ]
        }
            
    ]
}
